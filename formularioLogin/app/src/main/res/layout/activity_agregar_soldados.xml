<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="regresar"
    tools:context="com.example.formulariologin1.ImportSoldados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/imp_sold"

            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_mostrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mostrarcontactos"
            android:text="@string/most_contactos" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Tv_contactos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/add_soldados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="import_sol"
                    android:text="importar lista"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/Tv_contactos_pb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnRe"
                    android:layout_width="51dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@mipmap/regresar"
                    android:onClick="regresar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />



            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</LinearLayout>